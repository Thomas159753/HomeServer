generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  role Role @default(USER)
  passwordHash String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  measurementLogs   MeasurementLog[]
}

model MeasurementLog {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  weight Decimal? @db.Decimal(5, 2)

  waist Decimal? @db.Decimal(5, 2)
  chest Decimal? @db.Decimal(5, 2)

  leftArm Decimal? @db.Decimal(5, 2)
  rightArm Decimal? @db.Decimal(5, 2)
  leftLeg Decimal? @db.Decimal(5, 2)
  rightLeg Decimal? @db.Decimal(5, 2)

  recordedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  note String?
  
  @@index([userId, recordedAt])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt   DateTime
}

enum Role {
  USER
  ADMIN
}